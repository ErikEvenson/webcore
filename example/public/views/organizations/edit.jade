section(data-ng-controller="OrganizationsController", data-ng-init="findOne()")
  h1 Edit organization

  form(data-ng-submit="update()", novalidate)
    div
      label(for="name") Name

      div
        input(type="text", data-ng-model="organization.name", id='name', placeholder="Name", required)
    
    div
      label(for="notes") Notes
      
      div
        textarea(data-ng-model="organization.notes", id="notes", cols="30", rows="10", placeholder="Notes")
    
    div
      input(type="submit", value="Update")
    
    div(data-ng-show="error")
      strong(data-ng-bind="error")
