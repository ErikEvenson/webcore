extends ./bases/base.jade

block content
  if (user)
    h2 Hello #{user.name.first}
    p
      a(href="/signout") Sign out
  else
    p
      a(href="/signup") Sign up
    p
      a(href="/signin") Sign in

  section
    input(type="text", id="text1", ng-model="name")
    input(type="text", id="text2", ng-model="name")
